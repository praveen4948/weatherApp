<html lang="en">
  <head>
    {{>headerlinks}}
  </head>
  <body>
    <!-- navbar -->
    {{>navbar}}

    <!-- main header -->
    <div class=" main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left side -->
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to weather app</p>
              <h2>
                Get the Latest
                <span style="color: blue">Weather</span>
                Info Of Your City
              </h2>
              <a href="/weather"><button id="btnn">Check now</button></a>
            </div>
            <!-- right side -->
            <div class="col-md-6 col-12 main_header_right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-bs-ride="carousel"
              >
                <div class="carousel-inner images">
                  <div class="carousel-item active">
                    <img
                      src="images/img1.jpg"
                      class="d-block w-100"
                      alt="firstimage"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/img2.jpg"
                      class="d-block w-100"
                      alt="secondimg"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/img3.jfif"
                      class="d-block w-100"
                      alt="thirdimage"
                    />
                  </div>
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- footer -->
    {{>footer}}
  </body>
</html>